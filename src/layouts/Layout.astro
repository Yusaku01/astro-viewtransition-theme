---
import { ClientRouter } from 'astro:transitions';
import ThemeInit from '../components/ThemeInit.astro';
import ThemeToggle from '../components/ThemeToggle.astro';
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>Astro View Transition Theme</title>
		<ThemeInit />
		<ClientRouter />
	</head>
	<body>
		<div class="toolbar">
			<ThemeToggle />
		</div>
		<slot />
	</body>
</html>

<style>
	:root {
		color-scheme: light;
		--background: #f7f5ef;
		--surface: #ffffff;
		--text: #191a1c;
		--muted: #5b5e66;
		--border: #d9d4c8;
		--accent: #1b6c8c;
	}

	html[data-theme='dark'] {
		--background: #0e1116;
		--surface: #151a21;
		--text: #e9edf2;
		--muted: #a3abb8;
		--border: #2b3340;
		--accent: #7cc4de;
	}

	* {
		box-sizing: border-box;
	}

	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}

	body {
		padding: 20px;
		background: var(--background);
		color: var(--text);
		transition: background-color 200ms ease, color 200ms ease;
	}

	a {
		color: var(--accent);
	}

	.toolbar {
		display: flex;
		justify-content: flex-end;
		padding-block: 8px 20px;
	}
</style>
